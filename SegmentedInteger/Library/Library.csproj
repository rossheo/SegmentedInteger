<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <MakeDir Directories="$(ProjectDir)ProtoOuts" />
    <Exec Command="$(ProjectDir)..\..\Tools\protoc-33.1-win64\bin\protoc.exe --proto_path=$(ProjectDir)Protos --csharp_out=$(ProjectDir)ProtoOuts default.proto" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.33.1" />
  </ItemGroup>

</Project>
